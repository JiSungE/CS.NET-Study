<Window x:Class="_1107_WCFClientChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1107_WCFClientChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="350">
    <StackPanel>
        <!--첫번째 라인-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label>아이디(_I)</Label>
                <TextBox Name="txt_id" Width ="100" />
            </StackPanel>
            <Button Grid.Column="1" Margin="5" Content="Join" Click="Button_Click"/>
            <Button Grid.Column="2" Margin="5" Content="Leave" Click="Button_Click_1"/>
        </Grid>        
        <!-- 두번째 라인-->
        <ListBox Name="listbox" Height="280" Margin="5"/>        
        <!-- 세번째 라인 -->
        <StackPanel  Margin="5" Orientation="Horizontal">
            <TextBox Name="msg_txt" Width ="220" Margin="5" />
            <Button Margin="5" Content="Send" Width="80" Click="Button_Click_2"/>
        </StackPanel>        
    </StackPanel>

